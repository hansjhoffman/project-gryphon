<section class="">
    <h2 class="">Blog</h2>
<%= for post <- @posts do %>
    <article class="">
        <%= link post.title, to: Routes.post_path(@conn, :show, post.slug), class: "" %>
        <p class=""><%= post.description %></p>
        <p class=""><%= post.date %></p>
    </article>
<% end %>
</section>