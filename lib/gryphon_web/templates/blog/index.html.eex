<section class="">
    <h2 class="">Blog</h2>
<%= for post <- @posts do %>
    <article class="">
        <%= link post.title, to: Routes.blog_path(@conn, :show, post.slug), class: "" %>
        <p class=""><%= post.description %></p>
        <p class=""><%= post.date %></p>
        <%= render "_tags.html", conn: @conn, tags: post.tags %>
    </article>
<% end %>
</section>