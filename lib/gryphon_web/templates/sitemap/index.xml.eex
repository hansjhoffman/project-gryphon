<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<%= for post <- @posts do %>
    <url>
        <loc><%= "https://hansjhoffman.dev" <> Routes.post_path(@conn, :show, post.slug) %></loc>
        <lastmod><%= post.date %></lastmod>
    </url>
<% end %>
    <url>
        <loc><%= "https://hansjhoffman.dev/about" %></loc>
        <lastmod><%= "2020-08-12" %></lastmod>
    </url>
</urlset>